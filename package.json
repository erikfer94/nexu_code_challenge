  "license": "ISC",
  "scripts": {
    "dev": "ts-node-dev --files --respawn --pretty --debug --transpile-only src/app.ts",
    "watch": "tsc -w",
    "compile": "tsc",
    "start": "node dist/app.js",
    "dev2": "nodemon dist/app.js",
    "build": "tsc --build",
    "clean": "tsc --build --clean",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "migrate": "npx sequelize-cli db:migrate",
    "seed": "npx sequelize-cli db:seed:all"
  },
  "dependencies": {
    "@sequelize/core": "^7.0.0-alpha.45",
    "@sequelize/sqlite3": "^7.0.0-alpha.45",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-joi-validation": "^6.0.0",
    "helmet": "^8.0.0",
    "mysql2": "^3.12.0",
    "sequelize": "^6.37.6",
    "sequelize-typescript": "^2.1.6"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/dotenv": "^8.2.3",
    "@types/express": "^5.0.0",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^29.5.14",
    "@types/joi": "^17.2.3",
    "@types/node": "^22.13.10",
    "@types/sequelize": "^4.28.20",
    "@types/supertest": "^6.0.2",
    "@types/validator": "^13.12.2",
    "jest": "^29.7.0",
    "sequelize-cli": "^6.6.2",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.6",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.2"
  }
